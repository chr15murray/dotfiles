# Configuration for Alacritty on Linux

env:
  TERM: xterm-256color

window:
  dimensions:
   columns: 100
   lines: 30
  dynamic_padding: true
  decorations: none

font:
  size: 8
  normal:
    family: Hack Nerd Font
    style: Regular
  bold:
    family: Hack Nerd Font
  italic:
    family: Hack Nerd Font


shell:
  program: /usr/bin/zsh
  args: 
    - --login
